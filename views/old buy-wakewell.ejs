        "../images/SleepWell/SleepwellClean3.png",
        "../images/SleepWell/SleepwellClean4.png",
        "../images/SleepWell/SleepwellClean5.png"
    ];

    let currentIndex = 0;

    function initializeCarousel(carouselElement, images) {
        const imageElement = carouselElement.querySelector('img');
        const buttons = carouselElement.querySelectorAll('.carousel-controls button');
        const indicatorsContainer = carouselElement.querySelector('.carousel-indicators');

        // Set initial image
        imageElement.src = images[currentIndex];

        // Create indicator dots
        images.forEach((_, index) => {
            const dot = document.createElement('span');
            dot.classList.add('dot');
            if (index === currentIndex) dot.classList.add('active');
            dot.addEventListener('click', () => {
                currentIndex = index;
                updateCarousel(imageElement, images, indicatorsContainer);
            });
            indicatorsContainer.appendChild(dot);
        });

        // Add event listeners to control buttons
        buttons[0].addEventListener('click', () => {
            currentIndex = (currentIndex - 1 + images.length) % images.length;
            updateCarousel(imageElement, images, indicatorsContainer);
        });

        buttons[1].addEventListener('click', () => {
            currentIndex = (currentIndex + 1) % images.length;
            updateCarousel(imageElement, images, indicatorsContainer);
        });
    }

    function updateCarousel(imageElement, images, indicatorsContainer) {
        imageElement.src = images[currentIndex];

        // Update active dot
        const dots = indicatorsContainer.querySelectorAll('.dot');
        dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === currentIndex);
        });
    }

    // Initialize carousel for SleepWell product
    const sleepwellCarousel = document.querySelector('.product-overview-img .carousel');
    initializeCarousel(sleepwellCarousel, sleepwellImages);
});
</script>


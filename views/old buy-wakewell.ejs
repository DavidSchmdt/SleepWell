<script>
    let originalPosition = { x: 0, y: 0 };

    document.addEventListener("DOMContentLoaded", function() {
        // Speichere die urspr√ºngliche Position des Buttons, wenn das Dokument geladen wurde
        const button = document.getElementById('prepurchase');
        originalPosition.x = button.offsetLeft;
        originalPosition.y = button.offsetTop;
    });

    function moveButton() {
        // Button bewegt sich und √§ndert den Text f√ºr eine gewisse Zeit
        const button = document.getElementById('prepurchase');
        button.innerText = "Dr√ºck mich nicht!";
        const randomOffsetX = Math.floor(Math.random() * 300) - 150;
        const randomOffsetY = Math.floor(Math.random() * 300) - 150;
        button.style.transform = `translate(${randomOffsetX}px, ${randomOffsetY}px)`;
        setTimeout(() => {
